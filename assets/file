apiVersion: v1
kind: Pod
metadata:
  labels:
    run: nginx
  name: nginx
spec:
  containers:
  - image: nginx
    name: nginx:alpine
    volumeDevices:
        - name: logger
          devicePath: /var/www/nginx
  volumes:
    - name: logger
      persistentVolumeClaim:
        claimName: log-claim

apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: log-claim
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 200Mi

apiVersion: v1
kind: PersistentVolume
metadata:
  name: log-volume
spec:
  storageClassName: "log-volume"
  accessModes:
    - ReadWriteMany
  capacity:
    storage: 1Gi
  hostPath:
    path: /any/path/it/will/be/replaced
